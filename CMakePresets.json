{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base-clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/clang-toolchain.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "ENABLE_APPS": "ON",
        "ENABLE_TESTING": "OFF"
      }
    },
    {
      "name": "base-gcc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/gcc-toolchain.cmake",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "ENABLE_APPS": "ON",
        "ENABLE_TESTING": "OFF"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug (Clang)",
      "inherits": "base-clang",
      "binaryDir": "${sourceDir}/build/clang/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release",
      "displayName": "Release (Clang)",
      "inherits": "base-clang",
      "binaryDir": "${sourceDir}/build/clang/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "sanitize",
      "displayName": "ASan+UBSan (Clang)",
      "inherits": "base-clang",
      "binaryDir": "${sourceDir}/build/clang/sanitize",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Sanitize"
      }
    },
    {
      "name": "sanitize-tests",
      "displayName": "ASan+UBSan + Tests (Clang)",
      "inherits": "base-clang",
      "binaryDir": "${sourceDir}/build/clang/sanitize-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Sanitize",
        "ENABLE_TESTING": "ON"
      },
      "environment": {
        "CPATH": ""
      }
    },
    {
      "name": "thread-sanitize",
      "displayName": "ThreadSanitizer (Clang)",
      "inherits": "base-clang",
      "binaryDir": "${sourceDir}/build/clang/thread-sanitize",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "ThreadSanitize"
      }
    },
    {
      "name": "thread-sanitize-tests",
      "displayName": "ThreadSanitizer + Tests (Clang)",
      "inherits": "base-clang",
      "binaryDir": "${sourceDir}/build/clang/thread-sanitize-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "ThreadSanitize",
        "ENABLE_TESTING": "ON"
      },
      "environment": {
        "CPATH": ""
      }
    },
    {
      "name": "debug-tests",
      "displayName": "Debug + Tests (Clang)",
      "inherits": "base-clang",
      "binaryDir": "${sourceDir}/build/clang/debug-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_TESTING": "ON"
      },
      "environment": {
        "CPATH": ""
      }
    },
    {
      "name": "debug-gcc",
      "displayName": "Debug (GCC)",
      "inherits": "base-gcc",
      "binaryDir": "${sourceDir}/build/gcc/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "release-gcc",
      "displayName": "Release (GCC)",
      "inherits": "base-gcc",
      "binaryDir": "${sourceDir}/build/gcc/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "sanitize-gcc",
      "displayName": "ASan+UBSan (GCC)",
      "inherits": "base-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "binaryDir": "${sourceDir}/build/gcc/sanitize",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Sanitize"
      }
    },
    {
      "name": "sanitize-tests-gcc",
      "displayName": "ASan+UBSan + Tests (GCC)",
      "inherits": "base-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "binaryDir": "${sourceDir}/build/gcc/sanitize-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Sanitize",
        "ENABLE_TESTING": "ON"
      },
      "environment": {
        "CPATH": ""
      }
    },
    {
      "name": "thread-sanitize-gcc",
      "displayName": "ThreadSanitizer (GCC)",
      "inherits": "base-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "binaryDir": "${sourceDir}/build/gcc/thread-sanitize",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "ThreadSanitize"
      }
    },
    {
      "name": "thread-sanitize-tests-gcc",
      "displayName": "ThreadSanitizer + Tests (GCC)",
      "inherits": "base-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "binaryDir": "${sourceDir}/build/gcc/thread-sanitize-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "ThreadSanitize",
        "ENABLE_TESTING": "ON"
      },
      "environment": {
        "CPATH": ""
      }
    },
    {
      "name": "debug-tests-gcc",
      "displayName": "Debug + Tests (GCC)",
      "inherits": "base-gcc",
      "binaryDir": "${sourceDir}/build/gcc/debug-tests",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENABLE_TESTING": "ON"
      },
      "environment": {
        "CPATH": ""
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-debug",
      "configurePreset": "debug"
    },
    {
      "name": "build-release",
      "configurePreset": "release"
    },
    {
      "name": "build-sanitize",
      "configurePreset": "sanitize"
    },
    {
      "name": "build-sanitize-tests",
      "configurePreset": "sanitize-tests"
    },
    {
      "name": "build-thread-sanitize",
      "configurePreset": "thread-sanitize"
    },
    {
      "name": "build-thread-sanitize-tests",
      "configurePreset": "thread-sanitize-tests"
    },
    {
      "name": "build-debug-tests",
      "configurePreset": "debug-tests"
    },
    {
      "name": "build-debug-gcc",
      "configurePreset": "debug-gcc"
    },
    {
      "name": "build-release-gcc",
      "configurePreset": "release-gcc"
    },
    {
      "name": "build-sanitize-gcc",
      "configurePreset": "sanitize-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "build-sanitize-tests-gcc",
      "configurePreset": "sanitize-tests-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "build-thread-sanitize-gcc",
      "configurePreset": "thread-sanitize-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "build-thread-sanitize-tests-gcc",
      "configurePreset": "thread-sanitize-tests-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "build-debug-tests-gcc",
      "configurePreset": "debug-tests-gcc"
    }
  ],
  "testPresets": [
    {
      "name": "test-debug",
      "configurePreset": "debug-tests",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-sanitize",
      "configurePreset": "sanitize-tests",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-thread-sanitize",
      "configurePreset": "thread-sanitize-tests",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-debug-gcc",
      "configurePreset": "debug-tests-gcc",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-sanitize-gcc",
      "configurePreset": "sanitize-tests-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "test-thread-sanitize-gcc",
      "configurePreset": "thread-sanitize-tests-gcc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
